{
  "name": "setup-xamarin",
  "version": "1.0.0",
  "private": true,
  "description": "Set up your GitHub Actions workflow with a specific version of Mono & Xamarin",
  "main": "lib/setup-xamarin.js",
  "scripts": {
    "build": "tsc && ncc build",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "clean-devdeps": "rm -rf node_modules/ & npm install --only=prod",
    "pre-checkin": "npm run format && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maxim-lobanov/setup-xamarin.git"
  },
  "keywords": [
    "actions",
    "xamarin",
    "mono",
    "setup"
  ],
  "author": "Maxim Lobanov",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.2",
    "@actions/tool-cache": "^1.3.1",
    "semver": "^6.1.1"
  },
  "devDependencies": {
    "@types/node": "^12.0.4",
    "@types/semver": "^6.0.0",
    "@zeit/ncc": "^0.21.0",
    "prettier": "^1.17.1",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.1"
  }
}
