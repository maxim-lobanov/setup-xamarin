    "@types/node": "^13.9.0",
    "@zeit/ncc": "^0.21.1",
    "jest": "^25.1.0",
    "jest-circus": "^25.1.0",
    "prettier": "^1.19.1",
    "ts-jest": "25.2.1",
    "typescript": "^3.8.3"
